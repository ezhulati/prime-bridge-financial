---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { getAuthUser } from '../lib/auth';

const authUser = await getAuthUser(Astro.cookies);
---

<BaseLayout
  title="The Infrastructure Layer for Private Credit | PrimeBridge Finance"
  description="PrimeBridge standardizes the workflow, not the credit product — giving fintech lenders instant liquidity and investors transparent access to yield."
  image="/PrimeBridge_Finance.jpg"
>
  <Header user={authUser?.user} />

  <!-- Hero Section -->
  <section class="relative py-20 lg:py-28 bg-gradient-to-br from-darkest to-[#2a4a7a] text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <img src="/PrimeBridge_Finance.jpg" alt="" class="w-full h-full object-cover" />
    </div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-primary-light font-medium mb-4 text-sm tracking-wide uppercase animate-fadeInUp">
          Private Credit Infrastructure
        </p>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 animate-fadeInUp stagger-1 text-white" style="line-height: 1.08; letter-spacing: -0.025em;">
          The Infrastructure Layer for Private Credit
        </h1>
        <p class="text-xl sm:text-2xl text-gray-300 mb-8 max-w-2xl animate-fadeInUp stagger-2" style="line-height: 1.5; max-width: 65ch;">
          PrimeBridge standardizes the <em>workflow</em>, not the credit product — giving fintech lenders instant liquidity and investors transparent access to yield.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 mb-10 items-start sm:items-center animate-fadeInUp stagger-3">
          <!-- Primary Button: ONE per screen -->
          <a
            href="/lender/register"
            class="inline-flex items-center justify-center bg-white text-darkest hover:bg-gray-100 min-h-[52px] px-8 rounded-md font-semibold text-lg no-underline transition-all focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-darkest"
            style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
          >
            List Your Loan Pools
          </a>
          <!-- Tertiary Button: underlined text -->
          <a
            href="/investor/register"
            class="inline-flex items-center gap-2 text-white font-medium no-underline text-base hover:text-white/80 min-h-[52px] px-4 transition-all focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-darkest"
            style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
          >
            <span class="underline underline-offset-4 decoration-1">Request investor access</span>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
        <div class="flex flex-wrap gap-6 text-sm animate-fadeInUp stagger-4">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-white font-medium">12-20%+ target yields</span>
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-white font-medium">Full loan-level transparency</span>
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-white font-medium">No warehouse lines required</span>
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- The Problem Section -->
  <section class="py-20 lg:py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-10 text-center" style="line-height: 1.12; letter-spacing: -0.02em;">
          Private credit moves trillions — but the workflow is broken.
        </h2>
        <div class="grid sm:grid-cols-2 gap-4 mb-12">
          <div class="flex items-center gap-3 p-4 bg-red-50 rounded-lg border border-red-100">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-dark">Every tape is different</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-red-50 rounded-lg border border-red-100">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-dark">Every validation is manual</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-red-50 rounded-lg border border-red-100">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-dark">Data is messy</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-red-50 rounded-lg border border-red-100">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-dark">Funding takes weeks</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-red-50 rounded-lg border border-red-100">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-dark">Small lenders get left out</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-red-50 rounded-lg border border-red-100">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <span class="text-dark">Investors can't see what they're buying</span>
          </div>
        </div>
        <div class="text-center">
          <p class="text-xl text-dark mb-2" style="line-height: 1.5;">The problem isn't the <strong class="text-darkest">credit</strong>.</p>
          <p class="text-xl text-dark mb-6" style="line-height: 1.5;">It's the <strong class="text-darkest">process</strong>.</p>
          <p class="text-2xl text-primary font-bold" style="line-height: 1.3;">PrimeBridge fixes the process.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- The PrimeBridge Model -->
  <section class="py-20 lg:py-24 bg-light">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-4" style="line-height: 1.12; letter-spacing: -0.02em;">
          We standardize the pipe, not the product.
        </h2>
      </div>

      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- What Others Tried -->
        <div class="bg-red-50 rounded-xl p-8 border border-red-200">
          <h3 class="text-xl font-bold text-darkest mb-6 flex items-center gap-3">
            <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </div>
            Others tried to standardize:
          </h3>
          <ul class="space-y-3">
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Underwriting
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Covenants
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Structures
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Triggers
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Enhancements
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Servicing
            </li>
          </ul>
          <p class="mt-6 text-dark font-medium">That's why "marketplaces" never scaled.</p>
        </div>

        <!-- What PrimeBridge Does -->
        <div class="bg-green-50 rounded-xl p-8 border border-green-200">
          <h3 class="text-xl font-bold text-darkest mb-6 flex items-center gap-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            PrimeBridge standardizes:
          </h3>
          <ul class="space-y-3">
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Data ingestion
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Tape validation
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Risk analytics
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Deal packaging
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Soft-commit workflows
            </li>
            <li class="flex items-center gap-3 text-dark">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Allocation + funding
            </li>
          </ul>
          <div class="mt-6 pt-6 border-t border-green-200">
            <p class="text-darkest font-bold">Your deal stays bespoke.</p>
            <p class="text-primary font-bold">Our infrastructure makes it fast.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- For Fintech Lenders -->
  <section id="for-lenders" class="py-20 lg:py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <p class="text-primary font-semibold tracking-widest uppercase text-sm mb-4">
            For Fintech Lenders
          </p>
          <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-6" style="line-height: 1.12; letter-spacing: -0.02em;">
            Instant liquidity without warehouse lines
          </h2>
          <p class="text-lg text-dark mb-8" style="line-height: 1.6; max-width: 60ch;">
            Stop waiting on slow credit funds with unpredictable timelines. Upload your pool, get validation instantly, and generate investor demand in days, not months.
          </p>
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-darkest mb-1">No warehouse lines needed</h4>
                <p class="text-dark">Sell pools directly without tying up capital.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-darkest mb-1">Keep all origination fees</h4>
                <p class="text-dark">Your economics stay intact — we monetize the flow, not the lender.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-darkest mb-1">Scale without balance sheet</h4>
                <p class="text-dark">Originate more without raising debt or equity.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-darkest mb-1">Full control</h4>
                <p class="text-dark">Your underwriting. Your structure. Your covenants.</p>
              </div>
            </div>
          </div>
          <!-- Secondary Button: border + no fill (primary is in hero) -->
          <a
            href="/lender/register"
            class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary hover:text-white min-h-[52px] px-8 rounded-md font-semibold text-lg no-underline transition-all mt-10 focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2"
            style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
          >
            List Your Loan Pools
          </a>
        </div>
        <div class="bg-light rounded-xl overflow-hidden border border-light shadow-lg">
          <img
            src="/Prime-Bridge.jpg"
            alt="PrimeBridge Lender Portal"
            class="w-full h-auto object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- For Investors -->
  <section id="for-investors" class="py-20 lg:py-24 bg-light">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="order-2 lg:order-1 bg-white rounded-xl overflow-hidden border border-light shadow-lg">
          <img
            src="/PrimeBridgeFinance.jpg"
            alt="PrimeBridge Deal Room"
            class="w-full h-auto object-cover"
          />
        </div>
        <div class="order-1 lg:order-2">
          <p class="text-primary font-semibold tracking-widest uppercase text-sm mb-4">
            For Investors
          </p>
          <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-6" style="line-height: 1.12; letter-spacing: -0.02em;">
            High-yield private credit with full transparency
          </h2>
          <p class="text-lg text-dark mb-8" style="line-height: 1.6; max-width: 60ch;">
            Access short-duration, high-performing loan pools directly from vetted fintech lenders — without fund fees or black-box structures.
          </p>
          <div class="space-y-6">
            <div class="flex gap-4">
