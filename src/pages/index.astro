---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { getAuthUser } from '../lib/auth';

const authUser = await getAuthUser(Astro.cookies);
---

<BaseLayout
  title="Stop Wasting Hours Cleaning Loan Tapes | PrimeBridge"
  description="Upload your messy CSV. Get investor-ready data in minutes. Catch missing FICOs, invalid APRs, and format issues automatically."
  image="/PrimeBridge_Finance.jpg"
>
  <Header user={authUser?.user} />

  <!-- Hero Section - Hook in 5 seconds -->
  <section class="relative py-20 lg:py-28 bg-gradient-to-br from-darkest to-[#2a4a7a] text-white overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-primary-light font-medium mb-4 text-sm tracking-wide uppercase animate-fadeInUp">
          For Fintech Lenders
        </p>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 animate-fadeInUp stagger-1 text-white" style="line-height: 1.08; letter-spacing: -0.025em;">
          Stop wasting hours cleaning loan tapes
        </h1>
        <p class="text-xl sm:text-2xl text-gray-300 mb-8 max-w-2xl animate-fadeInUp stagger-2" style="line-height: 1.5; max-width: 65ch;">
          Upload your messy CSV. Get investor-ready data in minutes. See every error before your investors do.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 mb-10 items-start sm:items-center animate-fadeInUp stagger-3">
          <a
            href="/upload"
            class="inline-flex items-center justify-center bg-white text-darkest hover:bg-gray-100 min-h-[52px] px-8 rounded-md font-semibold text-lg no-underline transition-all focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-darkest"
            style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
          >
            Try it free — no signup required
          </a>
          <a
            href="#how-it-works"
            class="inline-flex items-center gap-2 text-white font-medium no-underline text-base hover:text-white/80 min-h-[52px] px-4 transition-all focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-darkest"
            style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
          >
            <span class="underline underline-offset-4 decoration-1">See how it works</span>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </a>
        </div>
        <div class="flex flex-wrap gap-6 text-sm animate-fadeInUp stagger-4">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-white font-medium">Catches missing FICOs</span>
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-white font-medium">Flags invalid APRs</span>
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-white font-medium">Exports clean tapes</span>
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Stats Section -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-4" style="line-height: 1.12; letter-spacing: -0.02em;">
          The problem is real
        </h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="bg-red-50 rounded-xl p-6 border border-red-100 text-center">
          <p class="text-4xl font-bold text-red-600 mb-2">38%</p>
          <p class="text-dark text-base" style="line-height: 1.5;">of lenders violate covenants without knowing it</p>
          <p class="text-xs text-gray-500 mt-2">Source: Cardo AI</p>
        </div>
        <div class="bg-red-50 rounded-xl p-6 border border-red-100 text-center">
          <p class="text-4xl font-bold text-red-600 mb-2">3.6%</p>
          <p class="text-dark text-base" style="line-height: 1.5;">manual data entry error rate — that's millions in risk</p>
          <p class="text-xs text-gray-500 mt-2">Source: Blend Research</p>
        </div>
        <div class="bg-red-50 rounded-xl p-6 border border-red-100 text-center">
          <p class="text-4xl font-bold text-red-600 mb-2">50+</p>
          <p class="text-dark text-base" style="line-height: 1.5;">years of zero standardization in loan data formats</p>
          <p class="text-xs text-gray-500 mt-2">Source: Finley Technologies</p>
        </div>
      </div>
      <p class="text-center text-xl text-darkest font-medium mt-10" style="line-height: 1.4;">
        Still using Excel? Your investors notice.
      </p>
    </div>
  </section>

  <!-- How It Works -->
  <section id="how-it-works" class="py-20 lg:py-24 bg-light">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-4" style="line-height: 1.12; letter-spacing: -0.02em;">
          How it works
        </h2>
        <p class="text-xl text-dark" style="line-height: 1.5;">Three steps. No signup required.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-white rounded-xl flex items-center justify-center text-2xl font-bold mx-auto mb-5" style="line-height: 1;">1</div>
          <h3 class="text-lg font-bold text-darkest mb-3" style="line-height: 1.25;">Upload your tape</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Drag and drop your CSV or Excel file. We auto-detect columns.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-white rounded-xl flex items-center justify-center text-2xl font-bold mx-auto mb-5" style="line-height: 1;">2</div>
          <h3 class="text-lg font-bold text-darkest mb-3" style="line-height: 1.25;">See validation results</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Missing FICOs, invalid APRs, duplicate IDs — all flagged instantly.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-white rounded-xl flex items-center justify-center text-2xl font-bold mx-auto mb-5" style="line-height: 1;">3</div>
          <h3 class="text-lg font-bold text-darkest mb-3" style="line-height: 1.25;">Export clean data</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Download investor-ready tapes. Fixed, formatted, ready to send.</p>
        </div>
      </div>

      <div class="text-center mt-12">
        <a
          href="/upload"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[52px] px-8 rounded-md font-semibold text-lg no-underline transition-all focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2"
          style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
        >
          Upload your first tape
        </a>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 lg:py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-4" style="line-height: 1.12; letter-spacing: -0.02em;">
          What we catch
        </h2>
        <p class="text-xl text-dark" style="line-height: 1.5;">Every validation error, before your investors see them.</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Missing FICOs</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Flags loans with missing or invalid credit scores (< 300 or blank).</p>
        </div>

        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Invalid APRs</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Catches rates outside valid ranges (< 0% or > 100%).</p>
        </div>

        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Duplicate IDs</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Identifies duplicate loan references that could cause reconciliation issues.</p>
        </div>

        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Date Format Issues</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Standardizes inconsistent date formats across your tape.</p>
        </div>

        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Invalid States</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Catches invalid or non-existent state codes.</p>
        </div>

        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Missing Loan IDs</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Ensures every loan has a unique identifier.</p>
        </div>

        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Out-of-Range Values</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Flags negative principals, impossible balances, and outliers.</p>
        </div>

        <div class="bg-light rounded-lg p-6 border border-light">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Clean Export</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Download validated, standardized tapes ready for investors.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Coming Soon: More Features -->
  <section class="py-20 lg:py-24 bg-light">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-4" style="line-height: 1.12; letter-spacing: -0.02em;">
          Coming soon
        </h2>
        <p class="text-xl text-dark" style="line-height: 1.5;">More tools to automate your capital markets workflow.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="bg-white rounded-xl p-6 border border-light shadow-sm opacity-75">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <span class="inline-block bg-primary/10 text-primary text-xs font-semibold px-2 py-1 rounded mb-3">Coming Soon</span>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Covenant Monitoring</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Real-time tracking of DSCR, delinquency rates, and advance rate tests.</p>
        </div>

        <div class="bg-white rounded-xl p-6 border border-light shadow-sm opacity-75">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <span class="inline-block bg-primary/10 text-primary text-xs font-semibold px-2 py-1 rounded mb-3">Coming Soon</span>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">Investor Reports</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">One-click monthly performance summaries and static pool analysis.</p>
        </div>

        <div class="bg-white rounded-xl p-6 border border-light shadow-sm opacity-75">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <span class="inline-block bg-primary/10 text-primary text-xs font-semibold px-2 py-1 rounded mb-3">Coming Soon</span>
          <h3 class="text-lg font-bold text-darkest mb-2" style="line-height: 1.25;">API Access</h3>
          <p class="text-dark text-base" style="line-height: 1.6;">Integrate tape validation directly into your existing workflows.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Who It's For -->
  <section class="py-20 lg:py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-4" style="line-height: 1.12; letter-spacing: -0.02em;">
          Built for fintech lenders
        </h2>
      </div>

      <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-8 gap-4">
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">Consumer</p>
        </div>
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">BNPL</p>
        </div>
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">Auto</p>
        </div>
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">Near-prime</p>
        </div>
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">Medical</p>
        </div>
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">Specialty</p>
        </div>
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">SMB</p>
        </div>
        <div class="bg-light rounded-lg p-4 text-center">
          <p class="text-base font-medium text-darkest">Equipment</p>
        </div>
      </div>

      <p class="text-center text-dark mt-10 text-base" style="line-height: 1.5;">
        If you send loan tapes to investors, PrimeBridge saves you hours.
      </p>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-24 bg-darkest text-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-6 max-w-3xl mx-auto text-white" style="line-height: 1.12; letter-spacing: -0.02em;">
        Ready to stop the spreadsheet chaos?
      </h2>
      <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto" style="line-height: 1.6;">
        Upload your first tape. See validation results instantly. No signup required.
      </p>
      <a
        href="/upload"
        class="inline-flex items-center justify-center bg-white text-darkest hover:bg-gray-100 min-h-[52px] px-8 rounded-md font-semibold text-lg no-underline transition-all focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-darkest"
        style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
      >
        Upload your first tape
      </a>
      <p class="text-gray-400 text-sm mt-6">
        Questions? <a href="/contact" class="text-white underline">hello@primebridge.finance</a>
      </p>
    </div>
  </section>

  <Footer />
</BaseLayout>
