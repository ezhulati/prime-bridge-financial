---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { getAuthUser } from '../lib/auth';

const authUser = await getAuthUser(Astro.cookies);
---

<BaseLayout
  title="The Infrastructure Layer for Private Credit | PrimeBridge Finance"
  description="We standardize the workflow — not the credit product — so fintech lenders and investors can transact faster with full transparency."
  image="/PrimeBridge_Finance.jpg"
>
  <Header user={authUser?.user} />

  <main>
    <!-- Hero -->
    <section class="py-20 lg:py-28 bg-gradient-to-br from-darkest to-[#2a4a7a] text-white">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <p class="text-primary-light font-medium mb-4 text-sm tracking-wide uppercase">
            The PrimeBridge Platform
          </p>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6" style="line-height: 1.1;">
            The Infrastructure Layer for Private Credit
          </h1>
          <p class="text-xl sm:text-2xl text-gray-300 mb-10 max-w-2xl" style="line-height: 1.5;">
            We standardize the workflow — not the credit product — so fintech lenders and investors can transact faster with full transparency.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center">
            <a
              href="/lender/register"
              class="inline-flex items-center justify-center bg-white text-darkest hover:bg-gray-100 min-h-[52px] px-8 rounded-lg font-semibold text-lg no-underline transition-colors"
            >
              Request Platform Access
            </a>
            <a
              href="#core-modules"
              class="inline-flex items-center gap-2 text-white font-medium no-underline text-base hover:text-white/80 transition-colors min-h-[52px] px-4"
            >
              <span class="underline underline-offset-4 decoration-1">See product screens</span>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- What PrimeBridge Actually Does -->
    <section class="py-20 bg-white">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-darkest mb-6" style="line-height: 1.15;">
              What PrimeBridge Actually Does
            </h2>
            <p class="text-xl text-dark mb-8 max-w-prose" style="line-height: 1.5;">
              Private credit isn't slow because deals are complex — it's slow because <strong class="text-darkest">the workflow is broken</strong>.
            </p>
            <p class="text-lg text-dark mb-6" style="line-height: 1.5;">
              PrimeBridge fixes the workflow by standardizing:
            </p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-darkest font-medium">Loan tape ingestion</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
