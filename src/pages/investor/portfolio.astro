---
import InvestorLayout from '../../layouts/InvestorLayout.astro';
import { createSupabaseServerClient } from '../../lib/supabase';
import { formatCurrency, riskTierLabels, getRiskTierColor, loanTypeLabels, commitmentStatusLabels, dealStatusLabels } from '../../types/database';
import type { RiskTier, LoanType, CommitmentStatus, DealStatus } from '../../types/database';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get investor profile
const { data: investor } = await supabase
  .from('investors')
  .select('*')
  .eq('user_id', user.id)
  .single();

if (!investor?.approved) {
  return Astro.redirect('/investor/pending');
}

// Get all commitments with deal info
const { data: commitments } = await supabase
  .from('deal_commitments')
  .select('*, deals(*, lenders(company_name))')
  .eq('investor_id', investor.id)
  .order('created_at', { ascending: false });

// Calculate portfolio stats
const activeCommitments = commitments?.filter(c => ['pending', 'confirmed', 'funded'].includes(c.status)) || [];
const totalCommitted = commitments?.reduce((sum, c) => sum + (c.amount || 0), 0) || 0;
const totalReturned = commitments?.reduce((sum, c) => sum + (c.principal_returned || 0), 0) || 0;
const totalInterest = commitments?.reduce((sum, c) => sum + (c.interest_earned || 0), 0) || 0;

// Group by status for tabs
const pendingCommitments = commitments?.filter(c => c.status === 'pending') || [];
const confirmedCommitments = commitments?.filter(c => c.status === 'confirmed') || [];
const fundedCommitments = commitments?.filter(c => c.status === 'funded') || [];
const completedCommitments = commitments?.filter(c => ['withdrawn', 'returned'].includes(c.status)) || [];

const statusColors: Record<CommitmentStatus, string> = {
  pending: 'bg-amber-100 text-amber-700',
  confirmed: 'bg-blue-100 text-blue-700',
  funded: 'bg-green-100 text-green-700',
  withdrawn: 'bg-gray-100 text-gray-700',
  returned: 'bg-purple-100 text-purple-700',
};
---

<InvestorLayout title="Portfolio">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-darkest">Your Portfolio</h1>
        <p class="text-dark mt-1">Track your commitments and returns</p>
      </div>
      <a
        href="/investor/deals"
        class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-md font-semibold no-underline whitespace-nowrap"
      >
        Browse more deals
      </a>
    </div>

    <!-- Stats Overview -->
    <div class="grid md:grid-cols-4 gap-6">
      <div class="bg-white rounded-xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Active Commitments</p>
            <p class="text-3xl font-bold text-darkest">{activeCommitments.length}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-info/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Total Committed</p>
            <p class="text-3xl font-bold text-darkest">{formatCurrency(totalCommitted)}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-success/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Interest Earned</p>
            <p class="text-3xl font-bold text-success">{formatCurrency(totalInterest)}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Principal Returned</p>
            <p class="text-3xl font-bold text-darkest">{formatCurrency(totalReturned)}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Commitments List -->
    <div class="bg-white rounded-xl border border-light overflow-hidden">
      <div class="p-6 border-b border-light">
        <h2 class="text-lg font-bold text-darkest">All Commitments</h2>
      </div>

      {commitments && commitments.length > 0 ? (
        <div class="divide-y divide-light">
          {commitments.map((commitment) => (
            <div class="p-6 hover:bg-lightest transition-colors">
              <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <a
                      href={`/investor/deals/${commitment.deal_id}`}
                      class="font-semibold text-darkest hover:text-primary text-lg"
                    >
                      {commitment.deals?.title}
                    </a>
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold ${statusColors[commitment.status as CommitmentStatus]}`}>
                      {commitmentStatusLabels[commitment.status as CommitmentStatus]}
                    </span>
                    {commitment.deals?.risk_tier && (
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getRiskTierColor(commitment.deals.risk_tier as RiskTier)}`}>
                        {riskTierLabels[commitment.deals.risk_tier as RiskTier]}
                      </span>
                    )}
                  </div>
                  <div class="flex flex-wrap gap-x-6 gap-y-1 text-sm text-dark">
                    <span>{commitment.deals?.lenders?.company_name}</span>
                    <span>{loanTypeLabels[commitment.deals?.loan_type as LoanType]}</span>
                    <span>Committed: {new Date(commitment.commitment_date).toLocaleDateString()}</span>
                  </div>
                </div>

                <div class="flex items-center gap-8">
                  <div class="text-right">
                    <p class="text-xl font-bold text-darkest">{formatCurrency(commitment.amount)}</p>
                    <p class="text-xs text-dark">Committed</p>
                  </div>
                  <div class="text-right">
                    <p class="text-lg font-semibold text-primary">{commitment.deals?.target_yield}%</p>
                    <p class="text-xs text-dark">Target Yield</p>
                  </div>
                  {commitment.interest_earned > 0 && (
                    <div class="text-right">
                      <p class="text-lg font-semibold text-success">{formatCurrency(commitment.interest_earned)}</p>
                      <p class="text-xs text-dark">Earned</p>
                    </div>
                  )}
                </div>
              </div>

              {/* Deal Progress */}
              {commitment.deals && (
                <div class="mt-4 pt-4 border-t border-light">
                  <div class="flex items-center justify-between text-sm mb-2">
                    <span class="text-dark">Deal funding progress</span>
                    <span class="font-medium text-darkest">
                      {Math.round((commitment.deals.amount_committed / commitment.deals.total_amount) * 100)}%
                    </span>
                  </div>
                  <div class="h-2 bg-lightest rounded-full overflow-hidden">
                    <div
                      class="h-full bg-primary rounded-full transition-all"
                      style={`width: ${Math.min((commitment.deals.amount_committed / commitment.deals.total_amount) * 100, 100)}%`}
                    />
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      ) : (
        <div class="p-12 text-center">
          <div class="w-16 h-16 rounded-full bg-lightest mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-darkest mb-2">No commitments yet</h3>
          <p class="text-dark max-w-sm mx-auto mb-6">
            Start building your portfolio by committing to available loan pool deals.
          </p>
          <a
            href="/investor/deals"
            class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-md font-semibold no-underline"
          >
            Browse deals
          </a>
        </div>
      )}
    </div>

    <!-- Help Section -->
    <div class="bg-lightest rounded-xl border border-light p-6">
      <div class="flex flex-col md:flex-row md:items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold text-darkest mb-1">Need to modify a commitment?</h3>
          <p class="text-dark text-sm">Contact our investor relations team for any changes to pending commitments.</p>
        </div>
        <a
          href="mailto:investors@primebridge.com"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[40px] px-5 rounded-md font-semibold no-underline text-sm whitespace-nowrap"
        >
          Contact support
        </a>
      </div>
    </div>
  </div>
</InvestorLayout>
