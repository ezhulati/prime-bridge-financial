---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';

const user = Astro.locals.user;
---

<BaseLayout title="Pending Approval">
  <Header user={user} showNav={false} />

  <main class="flex min-h-[calc(100vh-64px)] items-center justify-center py-12 px-4 bg-lightest">
    <div class="w-full max-w-lg">
      <div class="bg-white rounded-2xl border border-light p-10 shadow-sm text-center">
        <!-- Animated Clock Icon -->
        <div class="w-20 h-20 rounded-full bg-amber-50 mx-auto mb-8 flex items-center justify-center relative">
          <div class="absolute inset-0 rounded-full bg-amber-100/50 animate-ping" style="animation-duration: 3s;"></div>
          <svg class="w-10 h-10 text-amber-500 relative z-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>

        <h1 class="text-2xl font-bold text-darkest mb-4">Your account is pending approval</h1>

        <p class="text-dark text-lg mb-8 max-w-sm mx-auto">
          Thank you for requesting investor access. Our team is reviewing your application.
        </p>

        <!-- Status Steps -->
        <div class="bg-lightest rounded-2xl p-6 mb-8">
          <div class="space-y-4">
            <div class="flex items-center gap-4">
              <div class="w-8 h-8 rounded-full bg-success flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div class="text-left">
                <p class="font-semibold text-darkest">Account created</p>
                <p class="text-sm text-medium">Your information has been received</p>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <div class="w-8 h-8 rounded-full bg-amber-400 flex items-center justify-center flex-shrink-0 animate-pulse">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="text-left">
                <p class="font-semibold text-darkest">Under review</p>
                <p class="text-sm text-medium">Our team is verifying your details</p>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <div class="w-8 h-8 rounded-full bg-light flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="text-left">
                <p class="font-medium text-medium">Approval notification</p>
                <p class="text-sm text-medium">You'll receive an email when approved</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Timeline Info -->
        <div class="flex items-center justify-center gap-2 text-dark mb-8">
          <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-sm">
            Typically 1-2 business days
          </p>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-6 border-t border-light">
          <a
            href="mailto:investors@primebridge.com"
            class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[48px] px-6 rounded-lg font-semibold no-underline text-sm transition-colors"
          >
            Contact investor relations
          </a>
          <form action="/api/auth/logout" method="POST">
            <button
              type="submit"
              class="text-dark hover:text-darkest underline underline-offset-2 text-sm transition-colors"
            >
              Log out
            </button>
          </form>
        </div>
      </div>

      <!-- Help Text -->
      <p class="text-center text-medium text-sm mt-6">
        Questions? Email us at{' '}
        <a href="mailto:investors@primebridge.com" class="text-primary">investors@primebridge.com</a>
      </p>
    </div>
  </main>
</BaseLayout>
