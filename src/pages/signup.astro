---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import { SignupForm } from '../components/forms/SignupForm';
---

<BaseLayout title="Sign up">
  <Header showNav={false} />

  <main class="flex min-h-[calc(100vh-64px)] items-center justify-center py-12 px-4">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-lg border border-light p-8">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold text-darkest">Create your account</h1>
          <p class="text-dark mt-2">Get started with PrimeBridge Finance</p>
        </div>

        <SignupForm client:load />
      </div>
    </div>
  </main>
</BaseLayout>
