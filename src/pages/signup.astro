---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import { SignupForm } from '../components/forms/SignupForm';

// Get URL params for redirect flow
const url = new URL(Astro.request.url);
const redirectUrl = url.searchParams.get('redirect') || '';
const unlockPending = url.searchParams.get('unlock') === 'true';
const roleParam = url.searchParams.get('role');
const defaultRole = roleParam === 'lender' || roleParam === 'investor' ? roleParam : undefined;
---

<BaseLayout
  title="Create Account | PrimeBridge"
  description="Create a PrimeBridge account to save your validation history, set up custom rules, and access enterprise features."
  image="/PrimeBridge_Finance.jpg"
>
  <Header showNav={false} />

  <main class="min-h-[calc(100vh-64px)] bg-lightest">
    <div class="grid lg:grid-cols-2 min-h-[calc(100vh-64px)]">
      <!-- Left: Value Proposition -->
      <div class="hidden lg:flex flex-col justify-start p-12 lg:p-16 pt-20 lg:pl-32" style="background-color: #1B365D;">
        <div class="max-w-md">
          {unlockPending ? (
            <>
              <p class="text-sm font-medium mb-4 px-3 py-1.5 bg-white/10 rounded-full inline-block" style="color: rgba(255,255,255,0.9);">
                Your validation is ready
              </p>
              <h1 class="text-3xl font-bold mb-6 text-white">
                One more step to see your results
              </h1>
              <p class="text-xl mb-8" style="color: rgba(255,255,255,0.8);">
                Create a free account to unlock your full validation report and download the cleaned tape.
              </p>
            </>
          ) : (
            <>
              <h1 class="text-3xl font-bold mb-6 text-white">
                Unlock the full platform
              </h1>
              <p class="text-xl mb-8" style="color: rgba(255,255,255,0.8);">
                Create an account to save your work and access enterprise features.
              </p>
            </>
          )}
          <ul class="space-y-4">
            <li class="flex items-center gap-3" style="color: rgba(255,255,255,0.9);">
              <svg class="w-5 h-5" style="color: rgba(255,255,255,0.6);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Save validation history in the cloud
            </li>
            <li class="flex items-center gap-3" style="color: rgba(255,255,255,0.9);">
              <svg class="w-5 h-5" style="color: rgba(255,255,255,0.6);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Create custom validation rules
            </li>
            <li class="flex items-center gap-3" style="color: rgba(255,255,255,0.9);">
              <svg class="w-5 h-5" style="color: rgba(255,255,255,0.6);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Set up covenant monitoring alerts
            </li>
            <li class="flex items-center gap-3" style="color: rgba(255,255,255,0.9);">
              <svg class="w-5 h-5" style="color: rgba(255,255,255,0.6);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Get API access for automation
            </li>
          </ul>

          <div class="mt-10 pt-6 border-t border-white/10">
            <p class="text-sm" style="color: rgba(255,255,255,0.6);">
              Just want to try it? <a href="/upload" class="text-white underline">Use the free validator</a> â€” no signup required.
            </p>
          </div>
        </div>
      </div>

      <!-- Right: Signup Form -->
      <div class="flex items-center justify-center p-6 sm:p-12">
        <div class="w-full max-w-md">
          <div class="bg-white rounded-2xl border border-light p-8 lg:p-10 shadow-sm">
            <div class="text-center mb-8">
              <h2 class="text-2xl font-bold text-darkest">
                {unlockPending ? 'Create free account' : 'Create your account'}
              </h2>
              <p class="text-dark mt-3">
                {unlockPending ? 'Unlock your validation results' : 'Start saving your validation work'}
              </p>
            </div>

            <SignupForm
              client:load
              defaultRole={defaultRole}
              redirectUrl={redirectUrl}
              unlockPending={unlockPending}
            />

            <div class="mt-6 pt-6 border-t border-light text-center">
              <p class="text-dark">
                Already have an account?{' '}
                <a href="/login" class="text-primary font-semibold">
                  Log in
                </a>
              </p>
            </div>
          </div>

          <p class="text-center text-medium text-sm mt-6">
            By creating an account, you agree to our{' '}
            <a href="/terms" class="text-primary">Terms of Service</a>
          </p>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
