---
import LenderLayout from '../../../layouts/LenderLayout.astro';
import { createSupabaseServerClient } from '../../../lib/supabase';
import { formatCurrency } from '../../../types/database';
import type { LoanPoolStatus } from '../../../types/database';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get lender profile
const { data: lender } = await supabase
  .from('lenders')
  .select('*')
  .eq('user_id', user.id)
  .single();

if (!lender) {
  return Astro.redirect('/lender/profile');
}

// Get all loan pools for this lender
const { data: pools } = await supabase
  .from('loan_pools')
  .select('*')
  .eq('lender_id', lender.id)
  .order('created_at', { ascending: false });

const statusColors: Record<LoanPoolStatus, string> = {
  draft: 'bg-gray-100 text-gray-700',
  submitted: 'bg-blue-100 text-blue-700',
  under_review: 'bg-amber-100 text-amber-700',
  approved: 'bg-green-100 text-green-700',
  rejected: 'bg-red-100 text-red-700',
  converted: 'bg-purple-100 text-purple-700',
};

const statusLabels: Record<LoanPoolStatus, string> = {
  draft: 'Draft',
  submitted: 'Submitted',
  under_review: 'Under Review',
  approved: 'Approved',
  rejected: 'Rejected',
  converted: 'Converted to Deal',
};
---

<LenderLayout title="Loan Pools">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-darkest">Loan Pools</h1>
        <p class="text-dark mt-1">Manage your loan pool submissions</p>
      </div>
      {lender.status === 'approved' && (
        <a
          href="/lender/pools/new"
          class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline whitespace-nowrap"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Submit new pool
        </a>
      )}
    </div>

    <!-- Pools List -->
    <div class="bg-white rounded-2xl border border-light overflow-hidden">
      {pools && pools.length > 0 ? (
        <div class="divide-y divide-light">
          {pools.map((pool) => (
            <a href={`/lender/pools/${pool.id}`} class="block p-6 hover:bg-lightest transition-colors no-underline">
              <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="font-semibold text-darkest truncate text-lg">
                      {pool.pool_name}
                    </h3>
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold ${statusColors[pool.status as LoanPoolStatus]}`}>
                      {statusLabels[pool.status as LoanPoolStatus]}
                    </span>
                  </div>
                  <div class="flex flex-wrap gap-x-6 gap-y-2 text-sm text-dark">
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                      {pool.total_loans} loans
                    </span>
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {formatCurrency(pool.total_principal)} principal
                    </span>
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                      {pool.weighted_avg_apr}% APR
                    </span>
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {pool.weighted_avg_term_months} mo avg term
                    </span>
                  </div>
                </div>
                <div class="flex items-center gap-2 text-primary">
                  <span class="text-sm font-medium">View details</span>
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="p-12 text-center">
          <div class="w-16 h-16 rounded-full bg-lightest mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-darkest mb-2">No loan pools yet</h3>
          <p class="text-dark max-w-sm mx-auto mb-6">
            {lender.status === 'approved'
              ? 'Submit your first loan pool to start attracting investor capital.'
              : 'Get approved first, then you can start submitting loan pools.'
            }
          </p>
          {lender.status === 'approved' && (
            <a
              href="/lender/pools/new"
              class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline"
            >
              Submit first pool
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</LenderLayout>
