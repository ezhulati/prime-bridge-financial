---
import LenderLayout from '../../layouts/LenderLayout.astro';
import { createSupabaseServerClient } from '../../lib/supabase';
import { formatCurrency, dealStatusLabels, riskTierLabels, getRiskTierColor } from '../../types/database';
import type { DealStatus, RiskTier } from '../../types/database';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get user's lender profile
const { data: lender } = await supabase
  .from('lenders')
  .select('*')
  .eq('user_id', user.id)
  .single();

if (!lender) {
  return Astro.redirect('/lender/dashboard');
}

// Get lender's deals
const { data: deals } = await supabase
  .from('deals')
  .select('*')
  .eq('lender_id', lender.id)
  .order('created_at', { ascending: false });

const statusColors: Record<DealStatus, string> = {
  draft: 'bg-gray-100 text-gray-700',
  published: 'bg-green-100 text-green-700',
  fully_committed: 'bg-blue-100 text-blue-700',
  funding: 'bg-amber-100 text-amber-700',
  funded: 'bg-purple-100 text-purple-700',
  performing: 'bg-indigo-100 text-indigo-700',
  completed: 'bg-gray-100 text-gray-700',
  defaulted: 'bg-red-100 text-red-700',
};

// Calculate stats
const totalDeals = deals?.length || 0;
const publishedDeals = deals?.filter(d => d.status === 'published').length || 0;
const totalFunded = deals?.reduce((sum, d) => sum + (d.amount_funded || 0), 0) || 0;
const totalCommitted = deals?.reduce((sum, d) => sum + (d.amount_committed || 0), 0) || 0;
---

<LenderLayout title="Active Deals">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-darkest">Your Deals</h1>
        <p class="text-dark mt-1">Track deals created from your approved loan pools</p>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid md:grid-cols-4 gap-6">
      <div class="bg-white rounded-2xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Total Deals</p>
            <p class="text-3xl font-bold text-darkest">{totalDeals}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-success/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Published</p>
            <p class="text-3xl font-bold text-darkest">{publishedDeals}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-info/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Total Committed</p>
            <p class="text-3xl font-bold text-darkest">{formatCurrency(totalCommitted)}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl border border-light p-6">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-success/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Total Funded</p>
            <p class="text-3xl font-bold text-darkest">{formatCurrency(totalFunded)}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Deals List -->
    <div class="bg-white rounded-2xl border border-light overflow-hidden">
      <div class="p-6 border-b border-light">
        <h2 class="text-lg font-bold text-darkest">All Deals</h2>
      </div>

      {deals && deals.length > 0 ? (
        <div class="divide-y divide-light">
          {deals.map((deal) => (
            <div class="p-6 hover:bg-lightest transition-colors">
              <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="font-semibold text-darkest text-lg truncate">
                      {deal.title}
                    </h3>
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold ${statusColors[deal.status as DealStatus]}`}>
                      {dealStatusLabels[deal.status as DealStatus]}
                    </span>
                    {deal.risk_tier && (
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getRiskTierColor(deal.risk_tier as RiskTier)}`}>
                        {riskTierLabels[deal.risk_tier as RiskTier]}
                      </span>
                    )}
                  </div>
                  <p class="text-dark text-sm">
                    {deal.total_loans.toLocaleString()} loans &bull; {deal.term_months} months &bull; {deal.target_yield}% target yield
                  </p>
                </div>

                <div class="flex items-center gap-8">
                  <div class="text-center">
                    <p class="text-2xl font-bold text-darkest">{formatCurrency(deal.total_amount)}</p>
                    <p class="text-xs text-dark font-medium">Deal Size</p>
                  </div>
                  <div class="text-center">
                    <p class="text-xl font-bold text-primary">{formatCurrency(deal.amount_committed)}</p>
                    <p class="text-xs text-dark font-medium">Committed</p>
                  </div>
                  <div class="text-center">
                    <p class="text-lg font-semibold text-dark">{deal.investor_count}</p>
                    <p class="text-xs text-dark font-medium">Investors</p>
                  </div>
                </div>
              </div>

              {/* Progress bar for published deals */}
              {(deal.status === 'published' || deal.status === 'fully_committed' || deal.status === 'funding') && (
                <div class="mt-4">
                  <div class="flex justify-between text-sm text-dark mb-1">
                    <span>Funding progress</span>
                    <span>{Math.round((deal.amount_committed / deal.total_amount) * 100)}%</span>
                  </div>
                  <div class="h-2 bg-lightest rounded-full overflow-hidden">
                    <div
                      class="h-full bg-primary rounded-full transition-all"
                      style={`width: ${Math.min((deal.amount_committed / deal.total_amount) * 100, 100)}%`}
                    />
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      ) : (
        <div class="p-12 text-center">
          <div class="w-16 h-16 rounded-full bg-lightest mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-darkest mb-2">No deals yet</h3>
          <p class="text-dark max-w-sm mx-auto mb-6">
            Deals are created from your approved loan pools. Submit a loan pool and our team will review it to create a deal.
          </p>
          <a
            href="/lender/pools/new"
            class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline"
          >
            Submit a loan pool
          </a>
        </div>
      )}
    </div>

    <!-- Help Section -->
    <div class="bg-lightest rounded-2xl border border-light p-6">
      <div class="flex flex-col md:flex-row md:items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold text-darkest mb-1">How deals work</h3>
          <p class="text-dark text-sm">
            Once your loan pool is approved, our admin team creates a deal for investors. You'll see real-time updates on investor commitments and funding progress here.
          </p>
        </div>
      </div>
    </div>
  </div>
</LenderLayout>
