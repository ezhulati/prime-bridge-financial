---
import LenderLayout from '../../layouts/LenderLayout.astro';
import { createSupabaseServerClient } from '../../lib/supabase';
import { formatCurrency, formatPercent } from '../../types/database';
import { Badge } from '../../components/ui/Badge';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get user's lender profile
const { data: lender } = await supabase
  .from('lenders')
  .select('*')
  .eq('user_id', user.id)
  .single();

// Get lender's loan pools
const { data: pools } = await supabase
  .from('loan_pools')
  .select('*')
  .eq('lender_id', lender?.id)
  .order('created_at', { ascending: false });

// Get lender's active deals
const { data: deals } = await supabase
  .from('deals')
  .select('*')
  .eq('lender_id', lender?.id)
  .order('created_at', { ascending: false });

const poolCount = pools?.length || 0;
const activeDeals = deals?.filter(d => ['published', 'fully_committed', 'funding', 'funded', 'performing'].includes(d.status)).length || 0;
const totalFunded = deals?.filter(d => d.status === 'funded' || d.status === 'performing' || d.status === 'completed').reduce((sum, d) => sum + (d.amount_funded || 0), 0) || 0;

const statusColors: Record<string, string> = {
  pending: 'bg-amber-100 text-amber-700',
  under_review: 'bg-blue-100 text-blue-700',
  approved: 'bg-green-100 text-green-700',
  rejected: 'bg-red-100 text-red-700',
  suspended: 'bg-gray-100 text-gray-700',
};
---

<LenderLayout title="Dashboard">
  <div class="space-y-8">
    <!-- Welcome Section -->
    <div class="bg-white rounded-2xl border border-light p-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-2xl font-bold text-darkest mb-3">
            Welcome back{lender?.company_name ? `, ${lender.company_name}` : ''}!
          </h1>
          <p class="text-dark text-base">
            {lender?.status === 'approved'
              ? 'Manage your loan pools and track investor interest.'
              : lender?.status === 'pending' || lender?.status === 'under_review'
                ? 'Your account is pending approval. Complete your profile to expedite the review.'
                : 'Get started by completing your lender profile.'
            }
          </p>
        </div>
        {lender?.status === 'approved' && (
          <a
            href="/lender/pools/new"
            class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline whitespace-nowrap"
          >
            Submit new pool
          </a>
        )}
      </div>

      {lender && lender.status !== 'approved' && (
        <div class="mt-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <p class="font-medium text-amber-800">Account Status: {lender.status === 'pending' ? 'Pending Review' : lender.status === 'under_review' ? 'Under Review' : lender.status}</p>
              <p class="text-sm text-amber-700 mt-1">
                Please complete your company profile to expedite the approval process. Our team typically reviews applications within 1-2 business days.
              </p>
              <a href="/lender/profile" class="inline-flex items-center text-sm font-semibold text-amber-800 mt-2 hover:underline">
                Complete profile
                <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      )}
    </div>

    <!-- Quick Stats -->
    <div class="grid md:grid-cols-3 gap-6">
      <div class="bg-white rounded-2xl border border-light p-6 card-hover">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Total Pools</p>
            <p class="text-3xl font-bold text-darkest">{poolCount}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-xl border border-light p-6 card-hover">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-lg bg-info/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Active Deals</p>
            <p class="text-3xl font-bold text-darkest">{activeDeals}</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl border border-light p-6 card-hover">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-success/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-dark">Total Funded</p>
            <p class="text-3xl font-bold text-darkest">{formatCurrency(totalFunded)}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Loan Pools -->
    <div class="bg-white rounded-2xl border border-light overflow-hidden">
      <div class="p-6 border-b border-light flex items-center justify-between">
        <h2 class="text-lg font-bold text-darkest">Recent Loan Pools</h2>
        <a href="/lender/pools" class="text-sm text-primary font-medium hover:underline">
          View all
        </a>
      </div>

      {pools && pools.length > 0 ? (
        <div class="divide-y divide-light">
          {pools.slice(0, 5).map((pool) => (
            <div class="p-6 hover:bg-lightest transition-colors">
              <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="font-semibold text-darkest truncate">
                      {pool.pool_name}
                    </h3>
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${statusColors[pool.status] || 'bg-gray-100 text-gray-700'}`}>
                      {pool.status === 'draft' ? 'Draft' :
                       pool.status === 'submitted' ? 'Submitted' :
                       pool.status === 'under_review' ? 'Under Review' :
                       pool.status === 'approved' ? 'Approved' :
                       pool.status === 'rejected' ? 'Rejected' :
                       pool.status === 'converted' ? 'Converted to Deal' : pool.status}
                    </span>
                  </div>
                  <p class="text-dark text-sm">
                    {pool.total_loans} loans &bull; {formatCurrency(pool.total_principal)} principal &bull; {pool.weighted_avg_apr}% APR
                  </p>
                </div>
                <div class="flex gap-3 flex-shrink-0">
                  <a
                    href={`/lender/pools/${pool.id}`}
                    class="inline-flex items-center justify-center border border-light text-dark hover:bg-lightest min-h-[48px] px-4 rounded-lg font-medium no-underline text-sm"
                  >
                    View details
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="p-12 text-center">
          <div class="w-16 h-16 rounded-full bg-lightest mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-darkest mb-2">No loan pools yet</h3>
          <p class="text-dark max-w-sm mx-auto mb-6">
            {lender?.status === 'approved'
              ? 'Submit your first loan pool to start attracting investor capital.'
              : 'Complete your profile and get approved to start submitting loan pools.'
            }
          </p>
          {lender?.status === 'approved' ? (
            <a
              href="/lender/pools/new"
              class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline"
            >
              Submit loan pool
            </a>
          ) : (
            <a
              href="/lender/profile"
              class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline"
            >
              Complete profile
            </a>
          )}
        </div>
      )}
    </div>

    <!-- Help Section -->
    <div class="bg-lightest rounded-2xl border border-light p-6">
      <div class="flex flex-col md:flex-row md:items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold text-darkest mb-1">Need help with your loan pools?</h3>
          <p class="text-dark text-sm">Our team can help you structure pools and navigate the submission process.</p>
        </div>
        <a
          href="mailto:lenders@primebridge.com"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[48px] px-5 rounded-lg font-semibold no-underline text-sm whitespace-nowrap"
        >
          Contact support
        </a>
      </div>
    </div>
  </div>
</LenderLayout>
