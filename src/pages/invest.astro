---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import { SignupForm } from '../components/forms/SignupForm';
---

<BaseLayout title="Request investor access">
  <Header showNav={false} />

  <main class="min-h-[calc(100vh-64px)] bg-lightest">
    <div class="grid lg:grid-cols-2 min-h-[calc(100vh-64px)]">
      <!-- Left: Value Proposition -->
      <div class="hidden lg:flex flex-col justify-center bg-primary p-12 lg:p-16">
        <div class="max-w-md">
          <p class="text-white/60 font-semibold tracking-wide uppercase text-sm mb-4">
            For Investors
          </p>
          <h1 class="text-3xl font-bold text-white mb-6">
            Access private credit deals with real underwriting
          </h1>
          <p class="text-xl text-white/80 mb-8">
            Join our network of accredited investors to view pre-vetted lending opportunities.
          </p>

          <ul class="space-y-5 mb-10">
            <li class="flex gap-4">
              <div class="w-7 h-7 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-white">Direct deal access</h4>
                <p class="text-white/70 text-sm mt-1">No black boxes. See exactly what you're investing in.</p>
              </div>
            </li>
            <li class="flex gap-4">
              <div class="w-7 h-7 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-white">Professional credit analysis</h4>
                <p class="text-white/70 text-sm mt-1">Every deal includes a standardized credit memo.</p>
              </div>
            </li>
            <li class="flex gap-4">
              <div class="w-7 h-7 rounded-full bg-white/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-white">Operational simplicity</h4>
                <p class="text-white/70 text-sm mt-1">We handle docs, servicing, and reporting.</p>
              </div>
            </li>
          </ul>

          <div class="p-4 bg-white/10 rounded-lg">
            <p class="text-white/90 text-sm">
              <strong>Accredited investors only.</strong> Investor accounts require verification and approval before accessing the deal room.
            </p>
          </div>
        </div>
      </div>

      <!-- Right: Signup Form -->
      <div class="flex items-center justify-center p-6 sm:p-12">
        <div class="w-full max-w-md">
          <div class="bg-white rounded-xl border border-light p-8 shadow-sm">
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-darkest">Request investor access</h2>
              <p class="text-dark mt-2">Create an account to join our investor network</p>
            </div>

            <div class="mb-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
              <div class="flex gap-3">
                <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="text-sm text-amber-800">
                  Investor accounts require approval. You'll be notified by email once your account is reviewed (typically 1-2 business days).
                </p>
              </div>
            </div>

            <SignupForm client:load defaultRole="investor" />

            <div class="mt-6 pt-6 border-t border-light text-center">
              <p class="text-dark">
                Already have an account?{' '}
                <a href="/login" class="text-primary font-semibold">
                  Log in
                </a>
              </p>
            </div>
          </div>

          <div class="flex items-center justify-center gap-6 mt-8 text-sm text-medium">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <span>Secure & encrypted</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span>SEC compliant</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
