---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import { SignupForm } from '../components/forms/SignupForm';
---

<BaseLayout title="Request investor access">
  <Header showNav={false} />

  <main class="flex min-h-[calc(100vh-64px)] items-center justify-center py-12 px-4">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-lg border border-light p-8">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold text-darkest">Request investor access</h1>
          <p class="text-dark mt-2">Create an account to access the deal room</p>
        </div>

        <div class="mb-6 p-4 bg-lightest rounded-lg border border-light">
          <p class="text-sm text-dark">
            <strong>Note:</strong> Investor accounts require approval before accessing deals. You'll be notified once your account is reviewed.
          </p>
        </div>

        <SignupForm client:load defaultRole="investor" />
      </div>
    </div>
  </main>
</BaseLayout>
