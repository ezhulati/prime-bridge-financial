---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { createSupabaseServerClient } from '../../lib/supabase';

const user = Astro.locals.user;
if (!user || user.role !== 'admin') {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get counts
const { count: applicationsCount } = await supabase
  .from('applications')
  .select('*', { count: 'exact', head: true });

const { count: pendingApplicationsCount } = await supabase
  .from('applications')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'submitted');

const { count: investorsCount } = await supabase
  .from('investors')
  .select('*', { count: 'exact', head: true });

const { count: pendingInvestorsCount } = await supabase
  .from('investors')
  .select('*', { count: 'exact', head: true })
  .eq('approved', false);

const { count: dealsCount } = await supabase
  .from('deals')
  .select('*', { count: 'exact', head: true });

const { count: publishedDealsCount } = await supabase
  .from('deals')
  .select('*', { count: 'exact', head: true })
  .eq('published', true);
---

<AdminLayout title="Admin Dashboard">
  <div class="space-y-8">
    <!-- Overview Cards -->
    <div class="grid md:grid-cols-3 gap-6">
      <!-- Applications -->
      <a href="/admin/applications" class="bg-white rounded-lg border border-light p-6 hover:border-primary transition-colors no-underline">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          {pendingApplicationsCount > 0 && (
            <span class="inline-flex items-center rounded-full bg-amber-100 px-2.5 py-0.5 text-xs font-medium text-amber-800">
              {pendingApplicationsCount} pending
            </span>
          )}
        </div>
        <p class="text-3xl font-bold text-darkest">{applicationsCount || 0}</p>
        <p class="text-dark mt-1">Total applications</p>
      </a>

      <!-- Investors -->
      <a href="/admin/investors" class="bg-white rounded-lg border border-light p-6 hover:border-primary transition-colors no-underline">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          {pendingInvestorsCount > 0 && (
            <span class="inline-flex items-center rounded-full bg-amber-100 px-2.5 py-0.5 text-xs font-medium text-amber-800">
              {pendingInvestorsCount} pending
            </span>
          )}
        </div>
        <p class="text-3xl font-bold text-darkest">{investorsCount || 0}</p>
        <p class="text-dark mt-1">Total investors</p>
      </a>

      <!-- Deals -->
      <a href="/admin/deals" class="bg-white rounded-lg border border-light p-6 hover:border-primary transition-colors no-underline">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
            {publishedDealsCount || 0} published
          </span>
        </div>
        <p class="text-3xl font-bold text-darkest">{dealsCount || 0}</p>
        <p class="text-dark mt-1">Total deals</p>
      </a>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg border border-light p-6">
      <h3 class="text-lg font-semibold text-darkest mb-4">Quick actions</h3>
      <div class="flex flex-wrap gap-4">
        <a
          href="/admin/applications"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[40px] px-5 rounded-md font-semibold no-underline text-sm"
        >
          Review applications
        </a>
        <a
          href="/admin/investors"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[40px] px-5 rounded-md font-semibold no-underline text-sm"
        >
          Approve investors
        </a>
        <a
          href="/admin/deals/new"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[40px] px-5 rounded-md font-semibold no-underline text-sm"
        >
          Create new deal
        </a>
      </div>
    </div>
  </div>
</AdminLayout>
