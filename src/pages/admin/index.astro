---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { createSupabaseServerClient } from '../../lib/supabase';
import { formatCurrency, lenderStatusLabels, loanPoolStatusLabels, riskTierLabels, getRiskTierColor } from '../../types/database';

const user = Astro.locals.user;
if (!user || user.role !== 'admin') {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get lender counts
const { count: lendersCount } = await supabase
  .from('lenders')
  .select('*', { count: 'exact', head: true });

const { count: pendingLendersCount } = await supabase
  .from('lenders')
  .select('*', { count: 'exact', head: true })
  .in('status', ['pending', 'under_review']);

// Get loan pool counts
const { count: poolsCount } = await supabase
  .from('loan_pools')
  .select('*', { count: 'exact', head: true });

const { count: pendingPoolsCount } = await supabase
  .from('loan_pools')
  .select('*', { count: 'exact', head: true })
  .in('status', ['submitted', 'under_review']);

// Get investor counts
const { count: investorsCount } = await supabase
  .from('investors')
  .select('*', { count: 'exact', head: true });

const { count: pendingInvestorsCount } = await supabase
  .from('investors')
  .select('*', { count: 'exact', head: true })
  .eq('approved', false);

// Get deals counts
const { count: dealsCount } = await supabase
  .from('deals')
  .select('*', { count: 'exact', head: true });

const { count: publishedDealsCount } = await supabase
  .from('deals')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'published');

// Get recent loan pools for review
const { data: recentPools } = await supabase
  .from('loan_pools')
  .select('*, lenders(company_name)')
  .in('status', ['submitted', 'under_review'])
  .order('created_at', { ascending: false })
  .limit(5);

// Get pending lenders
const { data: pendingLenders } = await supabase
  .from('lenders')
  .select('*, users(name, email)')
  .in('status', ['pending', 'under_review'])
  .order('created_at', { ascending: false })
  .limit(5);

// Get pending investors
const { data: pendingInvestors } = await supabase
  .from('investors')
  .select('*, users(name, email)')
  .eq('approved', false)
  .order('created_at', { ascending: false })
  .limit(5);

const statusColors: Record<string, string> = {
  pending: 'bg-amber-100 text-amber-800',
  under_review: 'bg-blue-100 text-blue-800',
  approved: 'bg-green-100 text-green-800',
  rejected: 'bg-red-100 text-red-800',
  submitted: 'bg-amber-100 text-amber-800',
  converted: 'bg-purple-100 text-purple-800',
};
---

<AdminLayout title="Admin Dashboard">
  <div class="space-y-8">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-darkest">Dashboard</h1>
        <p class="text-dark mt-1">Manage lenders, loan pools, investors, and deals</p>
      </div>
      <a
        href="/admin/deals/new"
        class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline whitespace-nowrap transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Create deal from pool
      </a>
    </div>

    <!-- Stats Overview -->
    <div class="grid md:grid-cols-4 gap-6">
      <!-- Lenders Card -->
      <a href="/admin/lenders" class="group bg-white rounded-2xl border border-light p-6 card-hover no-underline">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          {pendingLendersCount && pendingLendersCount > 0 && (
            <span class="inline-flex items-center rounded-full bg-amber-100 text-amber-800 px-3 py-1 text-xs font-semibold">
              {pendingLendersCount} pending
            </span>
          )}
        </div>
        <p class="text-3xl font-bold text-darkest">{lendersCount || 0}</p>
        <p class="text-dark mt-1 font-medium">Total lenders</p>
        <div class="mt-4 flex items-center text-sm text-primary font-medium opacity-0 group-hover:opacity-100 transition-opacity">
          View all
          <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>

      <!-- Loan Pools Card -->
      <a href="/admin/pools" class="group bg-white rounded-xl border border-light p-6 card-hover no-underline">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-xl bg-info/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          {pendingPoolsCount && pendingPoolsCount > 0 && (
            <span class="inline-flex items-center rounded-full bg-amber-100 text-amber-800 px-3 py-1 text-xs font-semibold">
              {pendingPoolsCount} to review
            </span>
          )}
        </div>
        <p class="text-3xl font-bold text-darkest">{poolsCount || 0}</p>
        <p class="text-dark mt-1 font-medium">Loan pools</p>
        <div class="mt-4 flex items-center text-sm text-primary font-medium opacity-0 group-hover:opacity-100 transition-opacity">
          View all
          <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>

      <!-- Investors Card -->
      <a href="/admin/investors" class="group bg-white rounded-2xl border border-light p-6 card-hover no-underline">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-xl bg-success/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          {pendingInvestorsCount && pendingInvestorsCount > 0 && (
            <span class="inline-flex items-center rounded-full bg-amber-100 text-amber-800 px-3 py-1 text-xs font-semibold">
              {pendingInvestorsCount} pending
            </span>
          )}
        </div>
        <p class="text-3xl font-bold text-darkest">{investorsCount || 0}</p>
        <p class="text-dark mt-1 font-medium">Total investors</p>
        <div class="mt-4 flex items-center text-sm text-primary font-medium opacity-0 group-hover:opacity-100 transition-opacity">
          View all
          <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>

      <!-- Deals Card -->
      <a href="/admin/deals" class="group bg-white rounded-xl border border-light p-6 card-hover no-underline">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-xl bg-amber-500/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <span class="inline-flex items-center rounded-full bg-success/10 text-success px-3 py-1 text-xs font-semibold">
            {publishedDealsCount || 0} live
          </span>
        </div>
        <p class="text-3xl font-bold text-darkest">{dealsCount || 0}</p>
        <p class="text-dark mt-1 font-medium">Total deals</p>
        <div class="mt-4 flex items-center text-sm text-primary font-medium opacity-0 group-hover:opacity-100 transition-opacity">
          View all
          <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>
    </div>

    <!-- Loan Pools for Review -->
    <div class="bg-white rounded-2xl border border-light overflow-hidden">
      <div class="p-6 border-b border-light flex items-center justify-between">
        <h2 class="text-lg font-bold text-darkest">Loan pools awaiting review</h2>
        <a href="/admin/pools?status=submitted" class="text-primary font-medium text-sm hover:underline">
          View all
        </a>
      </div>

      {recentPools && recentPools.length > 0 ? (
        <div class="divide-y divide-light">
          {recentPools.map((pool) => (
            <a href={`/admin/pools/${pool.id}`} class="block p-4 hover:bg-lightest transition-colors no-underline">
              <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div class="min-w-0 flex-1">
                  <div class="flex items-center gap-3 mb-1">
                    <p class="font-semibold text-darkest truncate">{pool.pool_name}</p>
                    <span class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${statusColors[pool.status] || 'bg-gray-100 text-gray-800'}`}>
                      {loanPoolStatusLabels[pool.status]}
                    </span>
                  </div>
                  <p class="text-sm text-dark">
                    {pool.lenders?.company_name} &bull; {pool.total_loans} loans &bull; {formatCurrency(pool.total_principal)}
                  </p>
                </div>
                <div class="flex items-center gap-4">
                  <div class="text-right">
                    <p class="font-semibold text-darkest">{pool.weighted_avg_apr}%</p>
                    <p class="text-xs text-dark">Avg APR</p>
                  </div>
                  <span class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[36px] px-4 rounded-lg font-medium text-sm transition-colors flex-shrink-0">
                    Review
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="p-8 text-center">
          <div class="w-12 h-12 rounded-full bg-success/10 mx-auto mb-3 flex items-center justify-center">
            <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <p class="text-dark font-medium">No pools to review</p>
          <p class="text-medium text-sm mt-1">All loan pools have been processed</p>
        </div>
      )}
    </div>

    <!-- Two Column Layout -->
    <div class="grid lg:grid-cols-2 gap-6">
      <!-- Pending Lenders -->
      <div class="bg-white rounded-2xl border border-light overflow-hidden">
        <div class="p-6 border-b border-light flex items-center justify-between">
          <h2 class="text-lg font-bold text-darkest">Pending lender approvals</h2>
          <a href="/admin/lenders?status=pending" class="text-primary font-medium text-sm hover:underline">
            View all
          </a>
        </div>

        {pendingLenders && pendingLenders.length > 0 ? (
          <div class="divide-y divide-light">
            {pendingLenders.map((lender) => (
              <div class="p-4 hover:bg-lightest transition-colors">
                <div class="flex items-center justify-between gap-4">
                  <div class="min-w-0">
                    <p class="font-semibold text-darkest truncate">{lender.company_name}</p>
                    <p class="text-sm text-medium mt-0.5 truncate">{lender.users?.email}</p>
                  </div>
                  <a
                    href={`/admin/lenders/${lender.id}`}
                    class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[36px] px-4 rounded-lg font-medium no-underline text-sm transition-colors flex-shrink-0"
                  >
                    Review
                  </a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="p-8 text-center">
            <div class="w-12 h-12 rounded-full bg-success/10 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <p class="text-dark font-medium">All caught up!</p>
            <p class="text-medium text-sm mt-1">No pending lender approvals</p>
          </div>
        )}
      </div>

      <!-- Pending Investors -->
      <div class="bg-white rounded-xl border border-light overflow-hidden">
        <div class="p-6 border-b border-light flex items-center justify-between">
          <h2 class="text-lg font-bold text-darkest">Pending investor approvals</h2>
          <a href="/admin/investors?approved=false" class="text-primary font-medium text-sm hover:underline">
            View all
          </a>
        </div>

        {pendingInvestors && pendingInvestors.length > 0 ? (
          <div class="divide-y divide-light">
            {pendingInvestors.map((investor) => (
              <div class="p-4 hover:bg-lightest transition-colors">
                <div class="flex items-center justify-between gap-4">
                  <div class="min-w-0">
                    <p class="font-semibold text-darkest truncate">{investor.users?.name || 'Unknown'}</p>
                    <p class="text-sm text-medium mt-0.5 truncate">{investor.users?.email}</p>
                  </div>
                  <a
                    href={`/admin/investors/${investor.id}`}
                    class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[36px] px-4 rounded-lg font-medium no-underline text-sm transition-colors flex-shrink-0"
                  >
                    Review
                  </a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="p-8 text-center">
            <div class="w-12 h-12 rounded-full bg-success/10 mx-auto mb-3 flex items-center justify-center">
              <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <p class="text-dark font-medium">All caught up!</p>
            <p class="text-medium text-sm mt-1">No pending investor approvals</p>
          </div>
        )}
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-lightest rounded-2xl border border-light p-6">
      <h3 class="text-lg font-bold text-darkest mb-4">Quick actions</h3>
      <div class="flex flex-wrap gap-3">
        <a
          href="/admin/pools?status=submitted"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[44px] px-5 rounded-lg font-semibold no-underline text-sm transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          Review loan pools
        </a>
        <a
          href="/admin/lenders?status=pending"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[44px] px-5 rounded-lg font-semibold no-underline text-sm transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          Approve lenders
        </a>
        <a
          href="/admin/investors?approved=false"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[44px] px-5 rounded-lg font-semibold no-underline text-sm transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Approve investors
        </a>
        <a
          href="/admin/deals"
          class="inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[44px] px-5 rounded-lg font-semibold no-underline text-sm transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          Manage deals
        </a>
      </div>
    </div>
  </div>
</AdminLayout>
