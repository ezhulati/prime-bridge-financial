---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { createSupabaseServerClient } from '../../../lib/supabase';
import { dealStatusLabels, loanTypeLabels, riskTierLabels, getRiskTierColor, formatCurrency } from '../../../types/database';
import type { DealStatus, RiskTier, LoanType } from '../../../types/database';

const user = Astro.locals.user;
if (!user || user.role !== 'admin') {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get filters from query params
const url = new URL(Astro.request.url);
const statusFilter = url.searchParams.get('status');

// Build query
let query = supabase
  .from('deals')
  .select('*, lenders(company_name)')
  .order('created_at', { ascending: false });

if (statusFilter) {
  query = query.eq('status', statusFilter);
}

const { data: deals } = await query;

const statusColors: Record<DealStatus, string> = {
  draft: 'bg-gray-100 text-gray-700',
  published: 'bg-green-100 text-green-700',
  fully_committed: 'bg-blue-100 text-blue-700',
  funding: 'bg-amber-100 text-amber-700',
  funded: 'bg-purple-100 text-purple-700',
  performing: 'bg-indigo-100 text-indigo-700',
  completed: 'bg-gray-100 text-gray-700',
  defaulted: 'bg-red-100 text-red-700',
};
---

<AdminLayout title="Deals">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-darkest">Deal Management</h1>
        <p class="text-dark mt-1">Manage investment deals and monitor performance</p>
      </div>
      <a
        href="/admin/deals/new"
        class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Create Deal
      </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-2xl border border-light p-4">
      <div class="flex flex-wrap gap-2">
        <a
          href="/admin/deals"
          class={`inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium no-underline transition-colors ${!statusFilter ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          All
        </a>
        <a
          href="/admin/deals?status=draft"
          class={`inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium no-underline transition-colors ${statusFilter === 'draft' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Draft
        </a>
        <a
          href="/admin/deals?status=published"
          class={`inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium no-underline transition-colors ${statusFilter === 'published' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Published
        </a>
        <a
          href="/admin/deals?status=fully_committed"
          class={`inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium no-underline transition-colors ${statusFilter === 'fully_committed' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Fully Committed
        </a>
        <a
          href="/admin/deals?status=funded"
          class={`inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium no-underline transition-colors ${statusFilter === 'funded' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Funded
        </a>
        <a
          href="/admin/deals?status=performing"
          class={`inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium no-underline transition-colors ${statusFilter === 'performing' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Performing
        </a>
      </div>
    </div>

    <!-- Deals List -->
    <div class="bg-white rounded-2xl border border-light overflow-hidden">
      {deals && deals.length > 0 ? (
        <div class="divide-y divide-light">
          {deals.map((deal) => (
            <a href={`/admin/deals/${deal.id}`} class="block p-6 hover:bg-lightest transition-colors no-underline">
              <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="font-semibold text-darkest truncate text-lg">{deal.title}</h3>
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold ${statusColors[deal.status as DealStatus]}`}>
                      {dealStatusLabels[deal.status as DealStatus]}
                    </span>
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getRiskTierColor(deal.risk_tier as RiskTier)}`}>
                      {riskTierLabels[deal.risk_tier as RiskTier]}
                    </span>
                  </div>
                  <div class="flex flex-wrap gap-x-6 gap-y-1 text-sm text-dark">
                    <span>{deal.lenders?.company_name}</span>
                    <span>{loanTypeLabels[deal.loan_type as LoanType]}</span>
                    <span>{deal.total_loans.toLocaleString()} loans</span>
                    <span>{deal.term_months} months</span>
                  </div>
                </div>
                <div class="flex items-center gap-6">
                  <div class="text-right">
                    <p class="font-semibold text-primary text-xl">{deal.target_yield}%</p>
                    <p class="text-xs text-dark">Target Yield</p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold text-darkest">{formatCurrency(deal.total_amount)}</p>
                    <p class="text-xs text-dark">Deal Size</p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold text-darkest">{Math.round((deal.amount_committed / deal.total_amount) * 100)}%</p>
                    <p class="text-xs text-dark">Funded</p>
                  </div>
                  <svg class="w-5 h-5 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
              {/* Progress Bar */}
              <div class="mt-4">
                <div class="h-2 bg-lightest rounded-full overflow-hidden">
                  <div
                    class="h-full bg-primary rounded-full transition-all"
                    style={`width: ${Math.min((deal.amount_committed / deal.total_amount) * 100, 100)}%`}
                  />
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="p-12 text-center">
          <div class="w-16 h-16 rounded-full bg-lightest mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-darkest mb-2">No deals found</h3>
          <p class="text-dark max-w-sm mx-auto mb-6">
            {statusFilter ? 'No deals match this filter.' : 'Create your first deal from an approved loan pool.'}
          </p>
          <a
            href="/admin/deals/new"
            class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[48px] px-6 rounded-lg font-semibold no-underline"
          >
            Create Deal
          </a>
        </div>
      )}
    </div>
  </div>
</AdminLayout>
