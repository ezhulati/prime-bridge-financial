---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { createSupabaseServerClient } from '../../../lib/supabase';
import { loanPoolStatusLabels, loanTypeLabels, riskTierLabels, getRiskTierColor, formatCurrency } from '../../../types/database';
import type { LoanPoolStatus, RiskTier, LoanType } from '../../../types/database';

const user = Astro.locals.user;
if (!user || user.role !== 'admin') {
  return Astro.redirect('/login');
}

const supabase = createSupabaseServerClient(Astro.cookies);

// Get filters from query params
const url = new URL(Astro.request.url);
const statusFilter = url.searchParams.get('status');

// Build query
let query = supabase
  .from('loan_pools')
  .select('*, lenders(company_name, risk_tier)')
  .order('created_at', { ascending: false });

if (statusFilter) {
  query = query.eq('status', statusFilter);
}

const { data: pools } = await query;

const statusColors: Record<LoanPoolStatus, string> = {
  draft: 'bg-gray-100 text-gray-700',
  submitted: 'bg-amber-100 text-amber-700',
  under_review: 'bg-blue-100 text-blue-700',
  approved: 'bg-green-100 text-green-700',
  rejected: 'bg-red-100 text-red-700',
  converted: 'bg-purple-100 text-purple-700',
};
---

<AdminLayout title="Loan Pools">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-darkest">Loan Pool Management</h1>
        <p class="text-dark mt-1">Review and process loan pool submissions</p>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl border border-light p-4">
      <div class="flex flex-wrap gap-2">
        <a
          href="/admin/pools"
          class={`inline-flex items-center px-4 py-2 rounded-md text-sm font-medium no-underline transition-colors ${!statusFilter ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          All
        </a>
        <a
          href="/admin/pools?status=submitted"
          class={`inline-flex items-center px-4 py-2 rounded-md text-sm font-medium no-underline transition-colors ${statusFilter === 'submitted' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Submitted
        </a>
        <a
          href="/admin/pools?status=under_review"
          class={`inline-flex items-center px-4 py-2 rounded-md text-sm font-medium no-underline transition-colors ${statusFilter === 'under_review' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Under Review
        </a>
        <a
          href="/admin/pools?status=approved"
          class={`inline-flex items-center px-4 py-2 rounded-md text-sm font-medium no-underline transition-colors ${statusFilter === 'approved' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Approved
        </a>
        <a
          href="/admin/pools?status=converted"
          class={`inline-flex items-center px-4 py-2 rounded-md text-sm font-medium no-underline transition-colors ${statusFilter === 'converted' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Converted
        </a>
        <a
          href="/admin/pools?status=rejected"
          class={`inline-flex items-center px-4 py-2 rounded-md text-sm font-medium no-underline transition-colors ${statusFilter === 'rejected' ? 'bg-primary text-white' : 'bg-lightest text-dark hover:bg-light'}`}
        >
          Rejected
        </a>
      </div>
    </div>

    <!-- Pools List -->
    <div class="bg-white rounded-xl border border-light overflow-hidden">
      {pools && pools.length > 0 ? (
        <div class="divide-y divide-light">
          {pools.map((pool) => (
            <a href={`/admin/pools/${pool.id}`} class="block p-6 hover:bg-lightest transition-colors no-underline">
              <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="font-semibold text-darkest truncate text-lg">{pool.pool_name}</h3>
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold ${statusColors[pool.status as LoanPoolStatus]}`}>
                      {loanPoolStatusLabels[pool.status as LoanPoolStatus]}
                    </span>
                    {pool.platform_risk_tier && (
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getRiskTierColor(pool.platform_risk_tier as RiskTier)}`}>
                        {riskTierLabels[pool.platform_risk_tier as RiskTier]}
                      </span>
                    )}
                  </div>
                  <div class="flex flex-wrap gap-x-6 gap-y-1 text-sm text-dark">
                    <span>{pool.lenders?.company_name}</span>
                    <span>{loanTypeLabels[pool.loan_type as LoanType]}</span>
                    <span>{pool.total_loans.toLocaleString()} loans</span>
                    {pool.originating_bank && <span>Bank: {pool.originating_bank}</span>}
                  </div>
                </div>
                <div class="flex items-center gap-6">
                  <div class="text-right">
                    <p class="font-semibold text-darkest">{formatCurrency(pool.total_principal)}</p>
                    <p class="text-xs text-dark">Principal</p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold text-darkest">{pool.weighted_avg_apr}%</p>
                    <p class="text-xs text-dark">Avg APR</p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold text-darkest">{pool.weighted_avg_term_months} mo</p>
                    <p class="text-xs text-dark">Avg Term</p>
                  </div>
                  <svg class="w-5 h-5 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="p-12 text-center">
          <div class="w-16 h-16 rounded-full bg-lightest mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-medium" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-darkest mb-2">No loan pools found</h3>
          <p class="text-dark max-w-sm mx-auto">
            {statusFilter ? 'No pools match this filter.' : 'No loan pools have been submitted yet.'}
          </p>
        </div>
      )}
    </div>
  </div>
</AdminLayout>
