---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import { LoginForm } from '../components/forms/LoginForm';

const redirect = Astro.url.searchParams.get('redirect');
---

<BaseLayout
  title="Log In | PrimeBridge"
  description="Log in to your PrimeBridge account to access cloud features, API access, and saved validation history."
  image="/PrimeBridge.jpg"
>
  <Header showNav={false} />

  <main class="min-h-[calc(100vh-64px)] bg-lightest">
    <div class="grid lg:grid-cols-2 min-h-[calc(100vh-64px)]">
      <!-- Left: Value Proposition -->
      <div class="hidden lg:flex flex-col justify-start p-12 lg:p-16 pt-20 lg:pl-32" style="background-color: #1B365D;">
        <div class="max-w-md">
          <h1 class="text-3xl font-bold mb-6 text-white">
            Welcome back
          </h1>
          <p class="text-xl mb-8" style="color: rgba(255,255,255,0.8);">
            Access your saved tapes, validation history, and enterprise features.
          </p>
          <ul class="space-y-4">
            <li class="flex items-center gap-3" style="color: rgba(255,255,255,0.9);">
              <svg class="w-5 h-5" style="color: rgba(255,255,255,0.6);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Cloud-stored validation history
            </li>
            <li class="flex items-center gap-3" style="color: rgba(255,255,255,0.9);">
              <svg class="w-5 h-5" style="color: rgba(255,255,255,0.6);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Custom validation rules
            </li>
            <li class="flex items-center gap-3" style="color: rgba(255,255,255,0.9);">
              <svg class="w-5 h-5" style="color: rgba(255,255,255,0.6);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              API access for automation
            </li>
          </ul>

          <div class="mt-10 pt-6 border-t border-white/10">
            <p class="text-sm" style="color: rgba(255,255,255,0.6);">
              Don't need an account? <a href="/upload" class="text-white underline">Use the free validator</a> â€” no signup required.
            </p>
          </div>
        </div>
      </div>

      <!-- Right: Login Form -->
      <div class="flex items-center justify-center p-6 sm:p-12">
        <div class="w-full max-w-md">
          <div class="bg-white rounded-2xl border border-light p-8 lg:p-10 shadow-sm">
            <div class="text-center mb-8">
              <h2 class="text-2xl font-bold text-darkest">Log in to your account</h2>
              <p class="text-dark mt-3">Enter your credentials to continue</p>
            </div>

            <LoginForm client:load redirectUrl={redirect || undefined} />

            <div class="mt-6 pt-6 border-t border-light text-center">
              <p class="text-dark">
                Don't have an account?{' '}
                <a href="/signup" class="text-primary font-semibold">
                  Create one
                </a>
              </p>
            </div>
          </div>

          <p class="text-center text-medium text-sm mt-6">
            Need help? <a href="mailto:hello@primebridge.finance" class="text-primary">hello@primebridge.finance</a>
          </p>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
