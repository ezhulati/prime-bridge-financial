---
import type { User } from '../../types/database';

interface Props {
  user?: User | null;
  showNav?: boolean;
}

const { user, showNav = true } = Astro.props;

// Determine dashboard URL based on user role
const getDashboardUrl = (role: string) => {
  switch (role) {
    case 'lender':
      return '/lender/dashboard';
    case 'investor':
      return '/investor/dashboard';
    case 'admin':
      return '/admin';
    default:
      return '/';
  }
};
---

<header class="border-b border-light bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center no-underline">
          <img
            src="/logo.png"
            alt="PrimeBridge Finance"
            class="h-10 w-auto"
          />
        </a>
      </div>

      <!-- Navigation -->
      {showNav && (
        <nav class="hidden md:flex items-center gap-8">
          <a href="/#how-it-works" class="text-dark hover:text-darkest no-underline font-medium">
            How it works
          </a>
          <a href="/#for-lenders" class="text-dark hover:text-darkest no-underline font-medium">
            For Lenders
          </a>
          <a href="/#for-investors" class="text-dark hover:text-darkest no-underline font-medium">
            For Investors
          </a>
        </nav>
      )}

      <!-- Auth buttons -->
      <div class="flex items-center gap-2 sm:gap-4">
        {user ? (
          <div class="flex items-center gap-2 sm:gap-4">
            <a
              href={getDashboardUrl(user.role)}
              class="text-dark hover:text-darkest no-underline font-medium text-sm sm:text-base"
            >
              Dashboard
            </a>
            <form action="/api/auth/logout" method="POST">
              <button
                type="submit"
                class="text-primary font-medium hover:text-primary-hover text-sm sm:text-base"
              >
                Log out
              </button>
            </form>
          </div>
        ) : (
          <>
            <a
              href="/login"
              class="text-dark hover:text-darkest no-underline font-medium text-sm sm:text-base"
            >
              Log in
            </a>
            <a
              href="/investor/register"
              class="hidden md:inline-flex items-center justify-center border-2 border-primary text-primary hover:bg-primary/5 min-h-[40px] px-5 rounded-md font-semibold no-underline"
            >
              Invest
            </a>
            <a
              href="/lender/register"
              class="inline-flex items-center justify-center bg-primary text-white hover:bg-primary-hover min-h-[36px] sm:min-h-[40px] px-3 sm:px-5 rounded-md font-semibold no-underline text-sm sm:text-base whitespace-nowrap"
            >
              <span class="sm:hidden">List Pools</span>
              <span class="hidden sm:inline">List Loan Pools</span>
            </a>
          </>
        )}
      </div>
    </div>
  </div>
</header>
